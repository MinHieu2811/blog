
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("MONGO_DATABASE_URL")
}

model Post {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  cover     String
  slug      String     @unique
  title     String
  description String
  content   String
  tag       String[]
  status    PostStatus
  publishedAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum PostStatus {
  draft
  published
  archived
}
